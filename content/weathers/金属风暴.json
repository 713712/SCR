{
  "type": "ParticleWeather", // 粒子天气效果类型，表明这是一个粒子系统实现的天气
  "name": "金属风暴", // 天气效果名称，此处为“沙尘暴”
  "properties": {
    "color": "F2E878CF", // 粒子主颜色，十六进制色值（浅沙色）
    "noiseColor": "F2E878CF", // 粒子噪声纹理颜色，与主色一致保证视觉统一
    "particleRegion": "particle", // 粒子资源所在的纹理区域（图集路径标识）
    "drawNoise": true, // 是否绘制噪声纹理，true开启以增强沙尘暴的颗粒感
    "useWindVector": true, // 是否启用风向矢量，true让粒子随风向运动（符合沙尘暴特性）
    "sizeMax": 140.0, // 粒子最大尺寸（像素）
    "sizeMin": 70.0, // 粒子最小尺寸（像素），与max配合形成大小差异的粒子群
    "minAlpha": 0.0, // 粒子最小透明度（0为完全透明）
    "maxAlpha": 0.2, // 粒子最大透明度（0.2为低透明度，模拟沙尘的朦胧感）
    "density": 1500.0, // 粒子密度（数值越高，屏幕上的沙尘粒子越多）
    "baseSpeed": 5.4, // 粒子基础运动速度（数值越大，沙尘移动越快）
    "attrs": {
      "light": -0.1, // 光照属性修正值（负值降低环境亮度，模拟沙尘遮天效果）
      "water": -0.1 // 水分属性修正值（负值降低环境湿度，符合沙尘干燥特性）
    },
    "opacityMultiplier": 0.35, // 整体透明度倍增系数，进一步减弱粒子整体亮度
    "force": 0.1, // 粒子受外力（如风）影响的强度，数值越小风力影响越平缓
    "sound": "Sounds.wind", // 天气关联音效，此处为“风声”
    "soundVol": 0.8, // 音效音量（0-1范围，0.8为较高音量）
    "duration": "7 * Time.toMinutes" // 天气持续时间，7分钟（依赖Time工具类的分钟转毫秒逻辑）
  }
}
