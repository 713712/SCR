{
  // 建筑类型：定义该物品归属为“建造器/构造器”类，用于系统识别其核心功能属性
  "type": "Constructor",
  // 建筑名称：标识该建造器为“基础组件组装机”，明确其用途定位
  "name": "*建筑构筑厂",
  // 功能描述：说明该建造器的核心作用与特性——1. 制造用于单位组装的基础组件，需消耗能量；2. 可向接触到的方块传导能量；3. 列出可制造的8种配方
  "description": "建造需要的建筑",
  // 尺寸参数：代表该建造器在系统中占据的空间大小为3（具体单位需结合对应场景设定，如格子数、体积单位等）
  "size": 3,
  // 分类归属：将该建造器归入“units（单位）”类别，用于物品管理、筛选及系统分类统计
  "category": "units",
  // 制作需求：制造该基础组件组装机需消耗的两种材料及对应数量
  "requirements": [
        "劣质硅/40",  // 铁素体，220个
    "青铜矿石/50",  // 辉石，120个
    "初级芯片/20"     // 
  ],
  // 能量需求标识：布尔值“true”表示该建造器运行时**必须依赖能量**，无能量则无法工作
  "hasPower": true,
  // 运行资源消耗：该建造器正常工作时，每单位时间消耗0.5点能量（能量单位需结合对应场景设定）
  "consumes": {
    "power": 2
  },
  // 建造速度：数值“1”代表该建造器制造物品的基础速度（具体速度基准需结合对应场景设定，如“1单位/分钟”）
  "buildSpeed": 1,
  // 过滤列表：该建造器可制造物品的编码集合，与“description”中列出的配方一一对应，用于系统识别可生产的物品范围
  "filter": [
    "弹雨",        // 弹射器（对应配方“Catapult”）
    "青铜墙",           // 喷射器（对应配方“Spray”）
    "大型青铜墙",           // 灼烧器（对应配方“Singe”）
    "超大型青铜墙",  // 小型锂墙（对应配方“Lithium Wall”）
    "大型硅墙",  // 大型锂墙（对应配方“Large Lithium Wall”）
    "硅墙",// 小型磁石墙（对应配方“Lodestone Wall”）
    "爆散",// 大型磁石墙（对应配方“Large Lodestone Wall”）
    "撕破"    // 货运传送带（对应配方“Freight Conveyor”）
  ],
  // 解锁前置条件：需先完成“10j-00-地面安装舱”研究项目，才能解锁该基础组件组装机的获取或使用权限
  "research": "小型实验基地",
  // 精灵图形状标识：布尔值“false”表示该建造器的精灵图（显示图标）**不是正方形**，需按非正方形规格加载显示
  // 能量传导标识：布尔值“true”表示该建造器具备**能量传导功能**，可将自身获取的能量传递给接触的方块
  // 研究成本乘数：后续若有与该建造器相关的衍生研究，其研究成本会按0.3倍计算（即降低70%的衍生研究成本）
  "researchCostMultiplier": 0.5,
  // 最大方块尺寸：该建造器可兼容/处理的最大方块尺寸为3（具体尺寸单位需结合对应场景设定，如“3×3×3体积”）
  "maxBlockSize": 3
}
