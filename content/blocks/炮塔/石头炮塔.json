
{
    "type": "ItemTurret",  // 实体类型：物品炮塔（定义该建筑为可放置的炮塔类物品）
    "name": "石头炮塔",    // 炮塔名称：游戏内显示的中文名称
    "description": "一个小型炮塔，内置简易的击发装置和微型延时装置，能连续有节奏发射20发子弹，但由于炮塔过于简易，无法搭配常规子弹，仅能装填石头和青铜矿粒，无法对敌人造成杀伤，在非极端程度下十分不建议使用。",  // 描述：游戏内对该炮塔的功能/特性说明
    "health": 350,         // 生命值：炮塔的耐久度，降至0时被摧毁
    "size": 1,             // 尺寸：炮塔占地面积（1格，单位为游戏内格子）
    "range": 80.0,         // 射程：炮塔可攻击的最大距离（单位为游戏内距离单位）
    "reload": 40,          // 装填时间：每次攻击间隔的冷却时间（单位为游戏内时间单位）
    "maxAmmo": 40,         // 最大弹药量：炮塔可储备的弹药上限
    "shootSound": "shootAltLong",  // 射击音效：攻击时播放的音效文件名
    "consumes": {          // 消耗资源：炮塔运行时额外消耗的资源
        "coolant": {       // 消耗类型：冷却液
            "amount": 0.4, // 消耗数量：每次攻击/周期消耗0.4单位冷却液
            "optional": true  // 是否可选：不添加冷却液也能运行，添加后可能有增益
        }
    },
    "shoot": {             // 射击参数：单次攻击的子弹配置
        "shots": 20,       // 单次发射数量：每次攻击发射40发子弹
        "shotDelay": 10    // 子弹间隔：发射的40发子弹无时间间隔（瞬间齐射）
    },
    "drawer": {            // 绘制配置：炮塔在游戏内的视觉渲染设定
        "type": "DrawTurret",  // 绘制类型：炮塔专用绘制逻辑
        "parts": [         // 渲染部件列表：组成炮塔外观的不同部分
            {
                "type": "RegionPart",  // 部件类型：区域纹理部件（使用指定纹理区域）
                "mirror": false,       // 是否镜像：渲染时不水平翻转
                "suffix": "-1",        // 纹理后缀：使用名为“[炮塔基础名]-1”的纹理
                "under": true,         // 层级设定：该部件渲染在其他部件下方
                "progress": "recoil",  // 动画进度关联：部件位置随“后坐力”参数变化
                "moveY": -0.85         // Y轴位移：基于进度的垂直移动幅度（后坐时向上移动）
            }
        ]
    },
    "ammoUseEffect": "casing2",  // 弹药使用特效：发射时生成名为“casing2”的弹壳掉落特效
    "ammoPerShot": 2,            // 每发消耗弹药：每次攻击（40发子弹）共消耗2单位弹药
    "targetGround": true,        // 地面目标：可攻击地面敌人
    "targetAir": true,           // 空中目标：可攻击空中敌人（即全地形攻击）
    "inaccuracy": 18,            // 攻击散布：子弹弹道的随机偏移程度（数值越高越不准）
    "ammoTypes": {               // 弹药类型配置：不同弹药对应不同的子弹属性
        "石头": {                // 适配弹药1：石头（使用该弹药时的子弹设定）
            "type": "BasicBulletType",  // 子弹类型：基础物理子弹（受物理规则影响）
            "speed": 7,                 // 子弹速度：飞行速度（单位为游戏内速度单位）
            "damage": 2.5,               // 单发伤害：每发子弹造成13点伤害
            "knockback": 2.5,           // 击退力度：命中敌人时造成的击退效果强度
            "lifetime": 12,           // 子弹寿命：子弹飞行11.6单位时间后消失（未命中时）
            "width": 10,                // 子弹宽度：碰撞判定与视觉的宽度（单位为像素）
            "height": 13,               // 子弹高度：碰撞判定与视觉的高度（单位为像素）
            "recoil": 3.5,              // 后坐力：发射时对炮塔产生的后坐力（影响炮塔旋转稳定性）
            "hitColor": "292929FF",     // 命中颜色：子弹命中目标时的闪光颜色（ARGB格式，此处为白色）
            "trailColor": "292929FF",   // 弹道轨迹颜色：子弹飞行时留下的轨迹颜色（紫色系）
            "trailWidth": 3,            // 轨迹宽度：弹道轨迹的像素宽度
            "trailLength": 4,           // 轨迹长度：弹道轨迹保留的帧数/段数
            "frontColor": "292929FF",   // 子弹前端颜色：子弹视觉效果的前端颜色（白色）
            "backColor": "292929FF",    // 子弹后端颜色：子弹视觉效果的后端颜色（紫色系）
            "hitEffect": "none",        // 命中特效：子弹命中时无额外特效
            "despawnEffect":"burning",  // 消失特效：子弹未命中消失时，生成“燃烧”特效
            "shootEffect":"overdriven"  // 射击特效：发射时生成“过载”风格的视觉特效
        },
        "青铜矿石": {            // 适配弹药2：青铜矿石（与“石头”弹药参数类似，仅颜色和伤害不同）
            "type": "BasicBulletType",
            "speed": 5,
            "damage": 1.3,               // 单发伤害：12点（略低于石头弹药）
            "knockback": 2.5,
            "lifetime": 30,
            "width": 10,
            "height": 13,
            "recoil": 3.5,
            "hitColor": "292929FF",
            "trailColor": "292929FF",   // 轨迹颜色：青铜色（黄色系）
            "trailWidth": 3,
            "trailLength": 4,
            "frontColor": "FFFFFFFF",
            "backColor": "EAB678FF",    // 后端颜色：青铜色
            "hitEffect": "none",
            "despawnEffect":"burning",
            "shootEffect":"overdriven"
        },
    },
    "rotateSpeed": 5,            // 旋转速度：炮塔追踪敌人时的转向速度（数值越高转向越快）
    "requirements": [            // 建造需求：制作该炮塔需要的材料
        {"item": "石头", "amount": 15},   // 材料1：15单位石头
        {"item": "回忆碎片", "amount": 5} // 材料2：5单位回忆碎片
    ],
    "category": "turret",        // 分类：属于“炮塔”类别（游戏内用于归类显示）
    "researchCostMultiplier": 0.3,  // 研发成本倍率：解锁该炮塔的研发资源消耗为基础值的0.3倍（低成本研发）
    "research": "回忆碎片"       // 研发前提：需要先解锁“回忆碎片”相关的研发项目，才能研发该炮塔
}