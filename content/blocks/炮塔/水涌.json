{
  // 炮塔类型：液体炮塔（核心属性，定义该建筑的基础类别）
  "type": "LiquidTurret",
  // 炮塔名称：Billow（可理解为“浪涌”，体现其液体喷射特性）
  "name": "水涌",
  // 功能描述：快速向敌人发射液滴，具备灭火能力（核心用途说明）
  "description": "喷水灭火",
  // 占用格数：2格（建筑在地图上的空间大小）
  "size": 2,
  // 装填时间：4（数值越低射速越快，决定攻击间隔）
  "reload": 4,
  // 射击偏差：6（数值越高精度越低，影响子弹落点分散度）
  "inaccuracy": 6,
  // 是否含液体系统：是（标识该炮塔依赖液体作为弹药）
  "hasLiquids": true,
  // 液体容量：20（单次可装载的液体总量上限）
  "liquidCapacity": 30,
  // 研发成本倍率：0.5（研发该炮塔时，资源消耗为基准值的50%，降低研发门槛）
  "researchCostMultiplier": 0.5,
  // 轮廓颜色：42413e（十六进制色值，对应深灰色，用于建筑外观轮廓渲染）
  "outlineColor": "42413e",
  // 后坐力：0（射击时无后坐力，不影响后续射击精度）
  "recoil": 0.2,
  // 分类：炮塔（归属的建筑大类，用于游戏内分类检索）
  "category": "turret",
  // 研发条件配置（解锁该炮塔需满足的前置要求）
  "research":"冰冻森林", // 前置
  // 攻击范围：120（炮塔能攻击到的最大距离）
  "range": 120,
  // 建造所需材料（制作该炮塔需消耗的资源及数量）
  "requirements": [
    "青铜矿石/40", // 01a-01-item-ferrinite（铁素体）：40个
    "劣质硅/25", // 01a-02-item-demetite
  ],
  // 弹药类型配置（不同液体作为弹药时的属性差异）
  "ammoTypes": {
    // 1. 绿洲水弹药（02b-02-liquid-oasis-water）：基础无伤害型
    "water": {
      "despawnEffect": "none", // 子弹消失效果：无
      "hitEffect": "none", // 子弹命中效果：无
      "type": "LiquidBulletType", // 子弹类型：液体子弹
      "liquid": "water", // 对应液体：绿洲水
      "speed": 1.5, // 子弹飞行速度：1.5
      "lifetime": 80, // 子弹存在时间：80帧（超过时间消失）
      "knockback": 0.5, // 击退力度：0.7（命中敌人时使其后退的强度）
      "status": "wet", // 附加状态：潮湿（命中目标后施加的debuff/buff）
      "statusDuration": 120, // 状态持续时间：120帧
      "damage": 2, // 伤害值：0（仅用于灭火/施加状态，无直接伤害）
      "layer": 98 // 渲染层级：98（决定子弹在画面中的显示优先级）
    },
  },
  // 渲染配置（决定炮塔在游戏中的外观显示）
  // 方形精灵图：否（炮塔外观为非方形，按实际精灵图形状渲染）
  "squareSprite": false
}
