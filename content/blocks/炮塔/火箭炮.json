{
    "type": "ItemTurret",  // 定义这是一个物品型炮塔
    "name": "火箭炮",  // 炮塔名称
    "description": "[red]发射导弹",  // 带颜色代码和彩蛋的描述
    "health": 500,  // 生命值
    "size": 3,  // 占用2x2格
    "range": 300,  // 射程210
    "reload": 200,  // 装填时间40帧
    "maxAmmo": 20,  // 最大弹药容量
    "consumes": {  // 消耗系统
        "coolant": {  // 冷却液消耗（可选）
            "amount": 0.4,
            "optional": true
        }
    },
        "targetAir": true,  // 对空目标：是（可攻击空中单位）
    "targetGround": true,  // 对地目标：否（不可攻击地面单位）
    "drawer": { // 绘制器配置：定义炮塔在游戏内的视觉渲染参数
"type": "DrawTurret", // 绘制类型：炮塔专用绘制器（DrawTurret）
"parts": [ // 绘制部件列表：定义炮塔的视觉组成部分
{
"type": "RegionPart", // 部件类型：区域部件（RegionPart，通常对应精灵图的特定区域）
"suffix": "-missile", // 精灵图后缀：调用"qdevastator-missile"对应的精灵图（与炮塔名拼接）
"progress": "reload", // 进度关联：与"装填时间（reload）"绑定，部件状态随装填进度变化
"colorTo": "00000000", // 目标颜色：完全透明（00000000），部件会向该颜色过渡
"color": "ffffff", // 初始颜色：白色（ffffff，无透明度），部件初始显示的颜色
"outline": false, // 部件轮廓开关：关闭（false），不显示该部件的轮廓
"under": true, // 层级优先级：下层显示（true），该部件在其他非下层部件的下方渲染
"mirror": false, // 镜像开关：关闭（false），不对部件进行镜像翻转
"layerOffset": -0.01 // 图层偏移：-0.01单位，微调部件在Z轴的层级，数值越小越靠后
}
]
},
    "ammoTypes":{  // 弹药类型配置总对象，用于定义游戏中不同种类的弹药属性
	 	"初级芯片":{  // 以“plastanium（塑型钢，游戏内虚构材质）”命名的弹药配置
        "type":"FlakBulletType",  // 弹药基础类型：高射炮子弹类型（具备 fragmentation 碎片分裂特性）
        "speed": 1,  // 子弹飞行速度（数值越高，飞行越快）
        "damage": 0,  // 子弹直接命中目标时造成的基础伤害
        "ammoMultiplier": 2,  // 弹药数量倍率（可能影响单次发射的弹药总量或储备换算）
        "splashDamageRadius": 1,  // 子弹爆炸/命中后的溅射伤害范围（半径单位，范围内目标会受溅射伤害）
        "splashDamage": 1,  // 溅射范围内造成的伤害值（通常低于直接命中伤害）
        "collides":true,  // 子弹是否与其他实体（如敌方单位、友方单位）发生碰撞
        "collidesGround":true,  // 子弹是否与地面发生碰撞（碰撞后可能触发爆炸/停止飞行）
        "hitSize":1,  // 子弹的碰撞判定尺寸
        "spawnUnit": "qdevastator-missile" // 生成单位：射击时生成"qdevastator-missile"单位（推测为该炮塔发射的导弹实体）
    },}
    "shoot": {  // 射击参数
        "shots": 1,  // 每次射击
        "shotDelay": 100 // 每发间隔3帧
    },
    "ammoUseEffect": "casing2",  // 弹壳抛射效果
    "ammoPerShot": 10,  // 每次射击基础消耗1弹药
    "inaccuracy": 1.5,  // 散布
    "shootSound": "发射",  // 射击音效
    "rotateSpeed": 2,  // 炮塔旋转速度
    "requirements": [  // 建造所需材料
        {"item": "劣质硅", "amount": 55}  // 铜25
                {"item": "初级芯片", "amount": 85}  // 铜25
    ],
    "category": "turret",  // 分类为炮塔
    "researchCostMultiplier": 0.8,  // 研究成本只需30%
    "research": "天意所归",  // 前置研究项目
}
    