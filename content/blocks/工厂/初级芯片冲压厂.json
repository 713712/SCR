// 通用制造设备定义（GenericCrafter类型，游戏中常见的可放置制造建筑）
{
  "type": "GenericCrafter",  // 设备类型：通用制造机
  "name": "初级芯片铸造厂",  // 设备名称：铒钌熔炉（推测为“Endrium”对应合金的专属熔炉）
  "description": "利用劣质硅和石墨进行压缩能产生芯片，产量高，不会引起爆炸，因此需要水来降温[blue]感谢没有炮台的炮台S送来的贴图",  // 设备描述：制造芯片
  "drawer": {  // 绘图配置：定义设备在游戏中的视觉外观
    "type": "DrawMulti",  // 绘图类型：复合绘图（整合多种视觉元素）
    "drawers": [  // 子绘图元素列表
      {
        "type": "drawMulti", 
        "drawers": [
            {
                // 绘制特定区域，后缀为 -bottom，可能用于标识绘制区域的位置等
                "type": "drawRegion", 
                "suffix": "-bottom"
            },
            {
                // 绘制液态方块，这里液态类型为矿渣
                "type": "drawLiquidTile", 
                "drawLiquid": "slag"
            },
            {
                // 绘制熔炉火焰效果
                "type": "drawCrucibleFlame" 
            },
            {
                // 执行默认的绘制操作
                "type": "drawDefault" 
            }
            
    ],
    },
    ],
  },
  "size": 3,  // 设备尺寸：3x3格（游戏格子单位，代表设备在地图上占据的空间大小）
  "itemCapacity": 40,  // 物品容量：30（设备内部可存储的物品总数量上限）
  "craftTime": 300,  // 制造时间：300帧（完成一次合金熔炼所需时间，约6秒，按60帧/秒计算）
  "consumes": {  // 消耗配置：制造一次所需的资源
    "power": 2.5,  // 能量消耗：5.8单位/帧（设备运行时每秒消耗120单位能量，5.8*60）
    "items": {  // 物品消耗列表
      "items": [
        "劣质硅/10",  // 消耗钍（thorium）：5个/次
        "精致石墨/40"    // 消耗银钒矿（silvus）：3个/次
      ],
    },
    "liquid": {  // 液体消耗配置
      "liquid": "water",  // 消耗液体：低温冷却液（cryofluid，推测用于给熔炉降温）
      "amount": 0.7          // 液体消耗量：0.5单位/帧（每次制造共消耗240单位，0.5*480）
    },
  },
  "outputItems": [  // 产出物品列表：制造一次的产物
    "初级芯片/18"  // 产出铒钌合金（endrium）：1个/次
  ],
  "consumeEffect": "titanExplosion",
  "canOverdrive": true  // 是否支持超频：否（无法通过额外资源提升发效率或速度
  "researchCostMultiplier": 0.6,  // 研究成本倍率：0.2（降低该设备的研究资源消耗，仅需基础成本的20%）
  "category": "crafting",  // 设备分类：制造类（在游戏建造菜单的“制造”分类下显示）
  "research": "天意所归",  // 解锁条件：需要先研究“合金熔炉”（alloy-smelter）科技
  "requirements": [  // 建造需求：制造该设备所需的材料
    "青铜矿石/100",    // 铜：120个
    "劣质硅/50",      // 铅：175个
    "精致石墨/70",   // 硅：120个
    "铁锈/40",
    "初级芯片/35",
  ],
}
