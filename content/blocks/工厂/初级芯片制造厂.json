// 通用制造设备定义（GenericCrafter类型，游戏中常见的可放置制造建筑）
{
  "type": "GenericCrafter",  // 设备类型：通用制造机
  "name": "初级芯片制造厂",  // 设备名称：铒钌熔炉（推测为“Endrium”对应合金的专属熔炉）
  "description": "利用劣质硅和石墨进行压缩能产生低效运作的芯片，其压缩反应会产生热量，但不会引起爆炸，因此需要水来降温",  // 设备描述：制造芯片
  "drawer": {  // 绘图配置：定义设备在游戏中的视觉外观
    "type": "DrawMulti",  // 绘图类型：复合绘图（整合多种视觉元素）
    "drawers": [  // 子绘图元素列表
      {
        "type": "DrawDefault"  // 子绘图1：默认绘图（使用游戏内置的基础设备外观模板）
      },
      {
        "type": "drawArcSmelt",  // 子绘图2：熔炼弧形特效（表现熔炉的熔炼动态效果）
        "flameColor": "D06B53DC",  // 火焰颜色：亮粉色（十六进制色值）
        "midColor": "D06B5333",    // 中间过渡色：浅粉色（用于火焰颜色渐变）
        "flameRad": 1,           // 火焰半径：2像素（控制火焰视觉大小）
        "circleSpace": 1,        // 环形间隔：2像素（火焰特效中环形元素的间距）
        "circleStroke": 1,       // 环形线条宽度：1像素（环形元素的边框粗细）
        "alpha": 1,              // 透明度：1（完全不透明）
        "particleRad": 8,       // 粒子半径：14像素（熔炼时产生的粒子大小）
        "particles": 30,         // 粒子数量：60个（每次特效生成的粒子总数）
        "particleLen": 5,        // 粒子长度：5像素（粒子的视觉长度）
        "particleStroke": 1.5,   // 粒子线条宽度：1.5像素（粒子的边框粗细）
        "particleLife": 30       // 粒子生命周期：30帧（粒子在屏幕上存在的时间，游戏通常为60帧/秒）
      }
    ]
  },
  "size": 3,  // 设备尺寸：3x3格（游戏格子单位，代表设备在地图上占据的空间大小）
  "itemCapacity": 40,  // 物品容量：30（设备内部可存储的物品总数量上限）
  "craftTime": 300,  // 制造时间：300帧（完成一次合金熔炼所需时间，约6秒，按60帧/秒计算）
  "consumes": {  // 消耗配置：制造一次所需的资源
    "power": 2.5,  // 能量消耗：5.8单位/帧（设备运行时每秒消耗120单位能量，5.8*60）
    "items": {  // 物品消耗列表
      "items": [
        "劣质硅/5",  // 消耗钍（thorium）：5个/次
        "精致石墨/20"    // 消耗银钒矿（silvus）：3个/次
      ]
    },
    "liquid": {  // 液体消耗配置
      "liquid": "water",  // 消耗液体：低温冷却液（cryofluid，推测用于给熔炉降温）
      "amount": 0.5          // 液体消耗量：0.5单位/帧（每次制造共消耗240单位，0.5*480）
    }
  },
  "outputItems": [  // 产出物品列表：制造一次的产物
    "初级芯片/7"  // 产出铒钌合金（endrium）：1个/次
  ],
  "canOverdrive": true  // 是否支持超频：否（无法通过额外资源提升发效率或速度
  "researchCostMultiplier": 0.4,  // 研究成本倍率：0.2（降低该设备的研究资源消耗，仅需基础成本的20%）
  "category": "crafting",  // 设备分类：制造类（在游戏建造菜单的“制造”分类下显示）
  "research": "生物质合成区",  // 解锁条件：需要先研究“合金熔炉”（alloy-smelter）科技
  "requirements": [  // 建造需求：制造该设备所需的材料
    "青铜矿石/80",    // 铜：120个
    "劣质硅/40",      // 铅：175个
    "精致石墨/60",   // 硅：120个
    "铁锈/20",
  ]
}
