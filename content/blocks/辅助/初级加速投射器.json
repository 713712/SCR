{
    "type": "OverdriveProjector", // 对象类型：加速投射器（OverdriveProjector，用于为范围内目标提供加速效果的设备）
    "name": "初级加速投射器", // 设备名称：初级加速投射器
    "description":"加速建筑", // 描述：采用最新技术，能为目标提供更快的加速度
    "health": 500, // 耐久度：1280（设备可承受的最大伤害，数值归零则设备损坏）
    "size": 2, // 体型大小：2格（游戏内格子单位，占用2×2的空间）
    "researchCostMultiplier": 0.8,  // 研究成本倍率：0.2（降低该设备的研究资源消耗，仅需基础成本的20%）
    "range": 50, // 作用范围：128（游戏内距离单位，仅对范围内的目标生效）
    "reload": 32, // 效果刷新/冷却时间：32（游戏内时间单位，决定加速效果的持续或刷新频率）
    "speedBoost": 1.1, // 速度提升值：5（为目标提供的基础速度加成数值）
    "phaseBoost":1, // 相位速度提升值：2（为具备“相位”属性的目标额外提供的速度加成数值）
    "consumes": { // 资源消耗配置（设备运行所需资源）
        "power": 5, // 电力消耗：8.0（游戏内电力单位/时间，持续运行需稳定供电）
        "items":{ // 物品消耗配置
            "items":[ // 消耗物品列表
                    { "item":"初级芯片","amount": 1 } // 消耗物品：相位织物（phase-fabric），每次消耗1个
            ],
            "booster":true, // 是否为增益消耗：是（true，该物品消耗用于强化或维持加速效果）
            "optional": true // 物品消耗是否可选：是（true，可选择不消耗该物品，可能影响效果强度或持续时间）
        }
    },
    "requirements": [ // 建造所需材料（解锁并建造该设备需收集的资源）
        { "item": "青铜矿石", "amount": 50 }, // 钍（thorium）：50个
        { "item": "劣质硅", "amount": 60 }, // 塑料合金（plastanium）：60个
        { "item": "初级芯片", "amount": 30 }, // 硅（silicon）：60个
        { "item": "精致石墨", "amount": 10 }, // 石墨（graphite）：60个
        { "item": "铁锈", "amount": 20 }, // 钛（titanium）：50个
    ],
    "category":"effect", // 所属类别：效果类（effect，归类于为其他目标提供增益效果的设备）
    "research": "生物质合成区" // 解锁所需研发：生物质合成区（需先完成“生物质合成区”相关研发，才能解锁该设备的建造权限）
}
