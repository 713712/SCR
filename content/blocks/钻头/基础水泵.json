{
  "name": "基础水泵", // 设备名称：1号型号水泵（"mk1"即"Mark 1"，代表该水泵的初代/基础型号）
  "type": "pump", // 设备类型：水泵（明确该设备的核心功能类别是抽取液体的泵体）
  "category": "liquid", // 设备分类：液体类（归类该设备为处理液体相关的设施，便于系统划分和管理）
  "research": { // 解锁研究相关配置（需完成指定研究才能解锁该水泵的使用/制作）
    "parent": "天意所归", // 前置研究：机械水泵（表明必须先完成“机械水泵”的研究，才能解锁该水泵的研究项）
    "requirements": [ // 研究所需材料：1份含50单位铜（完成该水泵的研究，需要消耗50单位的铜）
      { "item": "青铜矿石", "amount": 200 }
    ]
  },
  "requirements": [ // 设备制作所需材料（制造该水泵实体时，需消耗的材料及对应数量）
    { "item": "青铜矿石", "amount": 30 }, // 30单位铜
    { "item": "劣质硅", "amount": 15 } // 15单位铅
  ],
  "liquidCapacity": 30, // 液体存储容量：30单位（该水泵内部可临时存储的液体最大量为30单位）
  "outputLiquid": { // 液体输出配置（水泵工作时的液体产出参数）
    "liquid": "water", // 输出液体类型：水（明确水泵抽取并输出的液体是水）
    "amount": 0.1 // 单次/单位时间输出量：0.17单位（即每次工作循环或每单位时间，可输出0.17单位的水）
  },
  "consumes": {}, // 运行消耗配置：无消耗（空对象表示该水泵工作时，不消耗电力、燃料等任何资源）
}
