  "hasLiquids": true,  // 液体功能：具备（可存储/处理液体）
  "liquidCapacity": 300,  // 液体存储容量：300单位（游戏内液体计量）
  "powerProduction": 15,  // 能量产出：每秒约1133.33单位能量
  "consumes": {  // 资源消耗配置
      "items": [
      "混合物/2"
    ],
    "liquids": [  // 液体消耗列表（各液体每秒消耗0.1单位）
      "water/0.2",  // 红色液体（Red Water），消耗速率0.1
    ]
  },
  "requirements": [  // 建造所需资源
    "青铜矿石/200",  // 低碳钢板块（Low-carbon Plate），需2000个
    "劣质硅/100",  // 钛板块（Titanium Plate），需1000个
    "精致石墨/50"    // 生物材料（Biological Material），需300个
