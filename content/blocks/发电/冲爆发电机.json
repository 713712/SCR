"drawer": {
    "type": "DrawMulti",  // 渲染类型：多重绘制（同时渲染多个图层）
    "drawers": [  // 绘制图层列表
        {
            "type": "DrawRegion",  // 图层1：区域绘制
            "suffix": "-bottom"   // 资源后缀：-bottom（对应底部区域的外观素材）
        },
        {
            "type": "DrawPlasma",  // 图层2：金色特效绘制
            "plasma1": "F2E878CF",  // 金色颜色1（浅青绿色十六进制色值）
