        },
        "DrawDefault",  // 图层3：默认基础模型绘制（设备主体外观）
        {
            "type": "DrawLiquidRegion",  // 图层4：液体区域绘制
            "drawLiquid": "water"    // 绘制液体类型：低温流体（cryofluid）
        },
    ],
},
  "health": 900,  // 设备生命值：1000点（生命值归0时设备损坏）
