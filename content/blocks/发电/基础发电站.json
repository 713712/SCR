 
{
    "type": "ConsumeGenerator",  // 设备类型：消耗型发电机（核心功能分类，表明该设备通过消耗物品产生能量）
    "name": "孢子发电站",  // 设备名称（游戏内显示的具体名称）
    "description": "基础发电机，将可燃物转化为电能，也可以烧烟煤",  // 设备描述（说明核心作用：消耗可燃物/烟煤发电）
    "size": 2,  // 设备尺寸：1单位（通常指游戏内格子占用大小，1代表1x1格子）
    "health": 120,  // 设备生命值：80点（被攻击或损坏时，生命值耗尽会失效）
    "hasLiquids": false,  // 是否存储液体：否（该设备无法存放或处理液体资源）
    "hasItems": true,  // 是否存储物品：是（可存放待消耗的可燃物）
    "itemDuration": 90,  // 单份物品消耗时长：90单位时间（一份可燃物可维持发电90时间）
    "powerProduction": 3,  // 电力输出：1单位电力/时间（每秒/每帧产生1点电力）
    "itemCapacity": 20,  // 物品存储容量：20单位（最多可存放20份可燃物）
    "drawer":{  // 渲染配置（控制设备在游戏内的显示效果）
        "type":"DrawMulti",  // 渲染类型：复合渲染（同时加载多个渲染组件）
        "drawers":[  // 渲染组件列表
            "DrawDefault",  // 默认渲染：设备基础外观（如机身模型）
            "DrawFlame"  // 火焰渲染：发电时显示火焰特效（增强视觉反馈）
        ],
    },
"consumes": {
          "itemFlammable": {},
},
    "requirements": [  // 建造需求（制造该设备需要的资源及数量）
        {
            "item": "青铜矿石",  // 所需资源：铜
            "amount": 30  // 所需数量：60单位
        },
        {
            "item": "烟煤",  // 所需资源：铅
            "amount": 5  // 所需数量：70单位
        },
        {
            "item": "劣质硅",  // 所需资源：石墨
            "amount": 10  // 所需数量：10单位
        }
    ],
    "ambientSound": "燃烧",  // 环境音效：熔炉音效（设备运行时播放的背景声音，如燃烧声）
    "ambientSoundVolume": 0.06,  // 环境音效音量：0.06（数值越小音量越低，范围通常为0-1）
    "category": "power",  // 设备分类：电力类（在游戏内归属于“电力设备”类别，方便玩家查找）
    "research": "陨石带",  // 解锁条件：需先研究“初代核心”（玩家需完成该科技研究才能建造）
    "researchCostMultiplier": 0.2,  // 研究成本倍率：0.2（降低该设备的研究资源消耗，仅需基础成本的20%）
    "canOverdrive": true  // 是否支持超频：否（无法通过额外资源提升发电效率或速度）
}