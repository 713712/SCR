{
    "type": "tank",  // 单位类型：坦克
    "name": "狂乐",  // 坦克名称
    "description": "坚硬且缓慢，攻击附近所有敌人。向附近敌人发标准射子",  // 特性描述
    "squareShape": true,  // 碰撞形状：方形
    "omniMovement": false,  // 全向移动：关闭（仅支持定向移动）
    "rotateMoveFirst": false,  // 移动优先：关闭（旋转与移动不同步优先）
    "rotateSpeed": 3,  // 旋转速度：3（数值越高转向越快）
    "speed": 0.4,  // 移动速度：0.4（数值越高移动越快，偏慢）
    "hitSize": 15.5,  // 碰撞体积：15.5（数值越大越易被击中）

    "ammoType": {  // 弹药类型配置
        "type": "PowerAmmoType",  // 弹药种类：能量型弹药
        "totalPower": 2200  // 总能量：2200（弹药消耗的能量基础值）
    },
    "ammoCapacity": 700,  // 弹药容量：700（最大备弹量）
    "ammoResupplyAmount": 1,  // 弹药补给倍率：1（每次补给1倍基础量）
    "health": 1200,  // 生命值：1200（基础血量）
    "armor": 20,  // 护甲值：23（减免23点伤害）
    "drag": 0.05,  // 空气阻力：0.08（数值越高减速越快）
    "accel": 0.3,  // 加速度：0.1（数值越高加速越快）
    "itemCapacity": 20,  // 物品容量：5（可携带5个道具）
    "treadPullOffset": 3,  // 履带牵引偏移：3（影响地形适应性）
    "faceTarget": false,  // 朝向目标：关闭（攻击时不强制转向目标）
    "weapons": [  // 武器列表（2种武器）
        {
            "name": "狂乐1",  // 武器1名称
            "reload": 200,  // 装填时间：90（数值越高射速越慢）
            "recoil": 1,  // 后坐力：0（射击无偏移）
            "x": 0,  // 武器X轴位置：0（相对于坦克中心）
            "y": 0,  // 武器Y轴位置：0（相对于坦克中心）
            "rotate": true,  // 武器旋转：开启（可独立转向）
            "rotateSpeed": 3,  // 武器旋转速度：3
            "mirror": false,  // 镜像对称：关闭（仅单侧部署）
            "inaccuracy": 0.5,  // 射击精度：0.5（数值越低越精准）
            "ejectEffect": "casing1",  // 弹壳特效：casing1（对应特效资源）
            "shootSound": "shoot",  // 射击音效：shoot（对应音效资源）
            "alternate": false,  // 交替射击：关闭（不与其他武器交替开火）
                "splashDamageRadius": 40,  // 子弹爆炸/命中后的溅射伤害范围（半径单位，范围内目标会受溅射伤害）
        "splashDamage": 40.0,  // 溅射范围内造成的伤害值（通常低于直接命中伤害）
            "bullet": {  // 主弹药配置
                "damage": 160,  // 伤害：100
                "speed": 2,  // 飞行速度：1（偏慢）
                "lifetime": 150,  // 存在时间：150（数值越高射程越远）
                "width": 15,  // 弹药宽度：3
                "height": 20,  // 弹药高度：10
                "intervalBullets": 3,  // 间隔发射数量：3（每次射击发射3发）
                "intervalBullet": {  // 间隔弹药（子弹）配置
                    "homingRange": 80,  // 制导范围：80（80单位内可追踪目标）
                    "homingPower": 0.1,  // 制导强度：0.1（数值越高追踪越灵敏）
                    "damage": 10,  // 子弹伤害：13
                    "speed": 3,  // 子弹飞行速度：3.5
                    "lifetime": 40,  // 子弹存在时间：40
                    "width": 8,  // 子弹宽度：2
                    "height": 10  // 子弹高度：7
                }
            }
        },
        {
            "name": "狂乐2",  // 武器2名称
            "reload": 20,  // 装填时间：5（射速极快）
            "x": -6,  // 武器X轴位置：-6（左侧部署）
            "y": 3,  // 武器Y轴位置：3（上方部署）
            "rotate": true,  // 武器旋转：开启
            "rotateSpeed": 5,  // 武器旋转速度：5（比武器1更快）
            "inaccuracy": 0,  // 射击精度：0（无偏差，精准命中）
            "shoot": {  // 射击模式配置
                "shots": 2,  // 每次射击发射数量：2
                "shotDelay": 14  // 发射间隔：7.5（两发之间的时间差）
            },
            "shootSound": "pew",  // 射击音效：pew
            "alternate": true,  // 交替射击：开启（与其他武器交替开火）
            "ejectEffect": "casing1",  // 弹壳特效：casing1
            "bullet": {  // 弹药配置
                "damage": 10,  // 伤害：11
                "speed": 3,  // 飞行速度：3
                "lifetime": 50,  // 存在时间：50
                "width": 7,  // 弹药宽度：7
                "height": 10  // 弹药高度：10
            }
        }
    ],
    "researchCostMultiplier": 0.8,  // 研发成本倍率：1（无额外成本）
    "research": {  // 研发配置
        "parent": "生物质合成区",  // 前置研发：生物质合成区（需先解锁该模块）
        "objectives": [  // 研发目标
            {
                "type": "SectorComplete",  // 目标类型：区域完成
                "preset": "小型实验基地"  // 目标区域：小型实验基地（需完成该区域）
            }
        ]
    }
}
