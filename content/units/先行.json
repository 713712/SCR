{
    // ========== 【核心属性】 ========== //
    "type": "legs",                // 单位类型：多足步行单位
    "name": "先行",                 // 单位显示名称
    "description": "地面单位，拥有中等量的护盾投影和范围维护器，配有中高额护甲来阻挡伤害，由于配备大量防护系统，令其仅有一门远距离导弹炮",          // 单位描述（此处标记为忽略）
    "targetAir": true,             // 能攻击空中目标
    "targetGround": true,          // 能攻击地面目标

    // ===== 【特殊能力】 ===== //
    "abilities": [
		{
    "type": "ForceFieldAbility",  // 能力类型：力场护盾能力
    "sides": 4,                   // 力场的几何边数
    "radius": 150,                 // 力场的保护半径
    "max": 1150,                   // 力场的最大能量值
    "regen": 0.8,                // 能量恢复速率
    "cooldown": 100              // 力场被击破后的冷却时间
}
    ],

    // ========== 【移动系统】 ========== //
    "speed": 0.7,                 // 移动速度（单位：格/秒）
    "drag": 0.2,                   // 移动阻力系数
    "rotateSpeed": 0.9,            // 身体旋转速度
    "hovering": true,              // 悬停模式（无视地形高度差）

    // ========== 【多足动画】 ========== //
    "legCount": 6,                 // 腿部数量：6足
    "legLength": 16,               // 腿部长度（像素）
    "legForwardScl": 0.2,          // 腿部前伸比例
    "legExtension": -3,            // 腿部伸展偏移量
    "legGroupSize": 2,             // 腿部运动分组大小
    "legMoveSpace": 0.6,           // 腿部移动间隔系数
    "legContinuousMove": true,     // 是否持续移动腿部动画
    "lockLegBase": true,           // 锁定腿部基部
    "legBaseOffset": 4, // 腿部在实体模型上的基础偏移量（单位同legLength），用于调整腿与身体连接点的位置，避免模型穿模

    // ========== 【战斗属性】 ========== //
    "health": 1300,               // 生命值
    "armor": 15,                   // 护甲减伤8%
    "hitSize": 19,               // 碰撞判定半径（像素）
    "canDrown": false,             // 免疫溺水伤害

    // ========== 【弹药系统】 ========== //
    "ammoType": "初级芯片",            // 使用晶体类弹药
    "ammoCapacity": 55,            // 弹药容量

    // ========== 【武器系统】 ========== //
    "weapons": [
      {
        "name": "先行1", // 武器挂载点名称，专属标识为"sei发射器"（推测为导弹发射器）
          "x": 0.0, // 武器在挂载点X轴的偏移量，0表示水平方向与挂载点完全对齐
          "y": 0.0, // 武器在挂载点Y轴的偏移量，0表示垂直方向与挂载点完全对齐
          "rotate": true, // 武器是否可旋转，true表示武器可随目标方向转动瞄准
          "rotateSpeed": 1.5, // 武器旋转速度系数，4.0表示瞄准速度快，能快速追踪目标
          "mirror": false, // 武器是否镜像显示（如左右对称挂载），false表示单方向显示
          "shadow": 20.0, // 武器阴影尺寸，20表示阴影范围大，增强武器的立体视觉效果
          "shootY": 4.5, // 子弹/弹药发射时的Y轴偏移量，调整发射点相对于武器的垂直位置
          "recoil": 1, // 武器后坐力大小，4.0表示发射时单位会有明显的后坐位移
          "reload": 100, // 武器装填时间（单位通常为帧/秒），45表示射速较慢，需间隔一段时间才能再次发射
          "velocityRnd": 0.4, // 弹药飞行速度的随机波动值，0.4表示速度有±40%的波动，增加攻击随机性
          "inaccuracy": 7.0, // 武器射击精度误差，7.0表示弹道有一定偏移，并非完全精准
          "ejectEffect": "none", // 弹壳/弹药残渣弹出特效，Fx.none表示无弹出特效
          "shake": 0.5, // 射击时屏幕震动强度，1.0表示轻微震动，增强射击反馈感
          "shootSound": "先行", // 射击音效，引用音效库中的"导弹发射声"
          "shoot": { // 武器射击模式配置
            "type": "ShootAlternate", // 射击模式为"交替射击"（通常用于多枪管武器交替发射）
            "shots": 6, // 单次射击的总发射次数，即一次扣动扳机发射6发弹药
            "shotDelay": 4, // 每发弹药之间的发射间隔，1.5表示每1.5单位时间发射1发
            "spread": 6, // 弹药弹道的扩散角度，4.0表示多发弹药呈小角度分散，覆盖小范围
            "barrels": 3 // 武器的枪管数量，3表示通过3个枪管交替完成6发弹药发射
          },
          "bullet": { // 武器发射的弹药配置（导弹类型）
            "type": "MissileBulletType", // 弹药类型为"导弹型子弹"（具备追踪能力）
            "speed": 5, // 导弹基础飞行速度，4.2表示飞行速度中等
            "damage": 25, // 导弹基础伤害值，42表示单枚导弹伤害中等
            "properties": {
              "homingPower": 0.12, // 导弹追踪目标的能力，0.12表示弱追踪，仅能轻微调整方向
              "width": 8.0, // 导弹碰撞体宽度（像素），8表示导弹模型较细
              "height": 8.0, // 导弹碰撞体高度（像素），8表示导弹模型为方形
              "shrinkX": 0.0, // 导弹飞行过程中X轴方向的收缩系数，0表示全程不收缩
              "shrinkY": 0.0, // 导弹飞行过程中Y轴方向的收缩系数，0表示全程不收缩
              "drag": -0.003, // 导弹飞行阻力系数，负值表示导弹会轻微加速（模拟推进器效果）
              "homingRange": 80.0, // 导弹追踪目标的有效范围，80表示仅在80单位距离内才会追踪
              "keepVelocity": false, // 导弹是否继承发射单位的速度，false表示导弹以自身速度飞行
              "splashDamageRadius": 35.0, // 导弹爆炸的范围伤害半径，35表示爆炸覆盖范围较大
              "splashDamage": 10.0, // 导弹爆炸的范围伤害值，45表示范围伤害略高于单体伤害
              "lifetime": 62.0, // 导弹的最大飞行时间，62表示超过时间后导弹会自行爆炸/消失
              "trailColor": "F2E878CF", // 导弹飞行轨迹的颜色，引用颜色库中的"子弹黄色背景色"
              "backColor": "F2E878CF", // 导弹模型背面颜色，与轨迹色一致，视觉统一
              "frontColor": "F2E878CF", // 导弹模型正面颜色，引用颜色库中的"子弹黄色"，增强立体感
              "hitEffect": "shieldBreak", // 导弹命中目标时的爆炸特效，引用特效库中的"冲击波爆炸"
              "despawnEffect": "shieldBreak", // 导弹超时/失效时的爆炸特效，与命中特效一致
              "weaveScale": 8.0, // 导弹飞行轨迹的摆动幅度系数，8表示飞行路径有明显的左右摆动
              "weaveMag": 2.0 // 导弹轨迹摆动的频率系数，2表示摆动频率中等，路径呈平缓波浪形
            }
          }
        }
    	        ]
    // ========== 【科技需求】 ========== //
    "alwaysUnlocked": false,       // 非初始解锁单位
        "researchCostMultiplier": 0.5,  // 研究
    "research": {
        "parent": "生物质合成区"         // 前置研究需要在"组装厂"中解锁
    } 
}