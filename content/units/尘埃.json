{
    // === 单位基础属性 ===
    "type": "flying",
    "name": "尘埃",
    "description": "空中单位，配备了旧版苍穹的火炮，但我们在原有的火炮上改进了炮弹，令炮弹在命中敌方单位时减速并造成伤害，但由于火炮体积过大，尘埃没有更多的载重量加固机体，使其防护十分之差",
    "outlineColor": "2E2F34FF",
    "template": "ErekirUnitType",
    "ammoCapacity": 30,
    "ammoResupplyAmount": 15,
    "speed": 2,
    "flying": true,               // 是飞行单位
    "lowAltitude": true,          // 低空飞行
    "turnCursor": false,
    "engineOffset": 0,
    "engineSize": 0,
    "hitSize": 12,
    "engineOffset": 6,                  // 推进器位置偏移量（相对中心）
    "engineSize": 4,                    // 推进器视觉效果大小
    "targetAir": true,
    "targetGround": true,
    "health": 200,
    "armor": 6,
    "itemCapacity": 0,
    "commandLimit": 0,
    "rotateShooting": true,
    "hitBuildings": true,
    "hitUnits": true,
    "researchCostMultiplier": 0.4,
	"research": "硅空军工厂"
"weapons": [ // 武器数组：存储所有武器配置，可包含多个武器对象
    {   
        "name": "导弹口1",    // 武器名称：用于标识该武器（如“导弹口1”“主炮2”）
        "reload": 100,        // 装填时间：武器发射后，需要等待700帧（或单位时间）才能再次发射
        "x": 0, "y": 0,       // 武器位置：相对于所属载具/物体的坐标（x轴、y轴），(0,0)通常为中心点
        "rotate": true,       // 旋转开关：true=武器可转动（如追踪目标），false=固定朝向
        "mirror": false,      // 镜像开关：false=武器不镜像翻转，true=可根据载具朝向反向显示
        "rotateSpeed": 28,    // 旋转速度（初始配置）：武器转动的基础速度（单位：度/帧）
        "inaccuracy": 15,     // 射击偏差：子弹发射方向的随机偏移角度（15度内），值越大越不准
        "shoot": {            // 射击参数：控制单次发射的子弹数量、间隔等
            "shots": 2,      // 单次发射总子弹数：每次触发射击会发射24发子弹
            "shotDelay": 15,  // 子弹间隔：每发子弹之间的时间间隔（15帧）
            "barrels": 2,     // 炮管数量：2个炮管（可能配合alternate实现交替发射）
            "spread": 2       // 弹幕扩散：多发子弹之间的角度差（2度），值越大弹幕越宽
        },
        "shootSound": "missile", // 射击音效：发射时播放的音效文件（此处为“导弹”音效）
        "rotateSpeed": 1.5,      // 炮台转头速度（最终生效）：武器追踪目标时的实际转动速度（覆盖上方初始值，单位：度/帧）
        "alternate": true,       // 交替发射：true=多炮管时交替发射（如2个炮管轮流打），false=同时发射
        "ejectEffect": "casing1",// 弹壳特效：发射时生成的弹壳弹出效果（对应“casing1”特效文件）
        "bullet": {              // 子弹参数：定义该武器发射的基础子弹属性
            "sprite": "missile", // 子弹 sprite：子弹显示的图像资源（此处为“导弹”外观）
            "splashDamageRadius": 15, // 溅射伤害范围：子弹命中后，以15单位为半径的圆形区域内造成溅射伤害
            "splashDamage": 54,  // 溅射伤害值：范围内目标受到的伤害（74点）
            "damage": 33,        // 基础伤害值：子弹直接命中目标时造成的伤害（33点）
            "speed": 3,          // 子弹速度：子弹飞行的速度（3单位/帧）
            "weaveMag": 2,       // 弹道摆动幅度：子弹飞行时左右摆动的最大幅度（2单位）
            "weaveScale": 4,     // 弹道摆动频率：摆动的快慢（值越大，摆动越频繁）
            "homingRange": 250,  // 追踪范围：子弹可锁定并追踪250单位内的目标
            "homingDelay": 5,    // 追踪延迟：子弹发射后，等待5帧才开始追踪目标
            "homingPower": 0.1,  // 追踪力度：子弹转向目标的强度（值越大，追踪越灵敏）
            "lifetime": 50,      // 子弹生命周期：子弹发射后存在50帧，超时后消失（防止无限飞行）
            "width": 7, "height": 10, // 子弹碰撞体积：子弹的宽度（7单位）和高度（10单位）（用于判定是否命中）
            "status": "melting",    // 子弹附加状态：命中目标后，给目标施加“融化”负面效果
            "statusDuration": 100, // 状态持续时间：“融化”效果持续240帧
            "makeFire": true,    // 点火开关：true=子弹命中后生成火焰特效（可点燃目标/地面）
            "fragBullets": 8,    // 碎片弹数量：子弹命中/爆炸后，分裂出8发碎片弹
            "fragRandomSpread": 12, // 碎片弹扩散：碎片弹发射方向的随机偏移角度（12度内）
            "fragBullet": {      // 碎片弹参数：定义分裂后碎片弹的属性
                "type": "LiquidBulletType", // 碎片弹类型：液体子弹（如“矿渣”这类液态弹药）
                "liquid": "slag",           // 液体类型：碎片弹携带的液体（此处为“矿渣”）
                "speed": 2.34,              // 碎片弹速度：碎片弹飞行速度（2.34单位/帧）
                "lifetime": 6,              // 碎片弹生命周期：存在6帧后消失
                "knockback": 0.3,           // 碎片弹击退：命中目标时，使目标向后退0.3单位
                "statusDuration": 120,      // 碎片弹状态持续：给目标施加的“融化”效果持续120帧
                "status": "melting",           // 碎片弹附加状态：命中后施加“融化”效果
                "damage": 7.5,              // 碎片弹伤害：单颗碎片弹造成7.5点伤害
                "makeFire": true            // 碎片弹点火：命中后生成火焰特效
            }
        }
    }
]
}